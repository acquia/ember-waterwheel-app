<div class="expanded row">
    <div class="small-12 medium-8 columns">
        <form {{action 'save' model on="submit"}} class="clearfix">
            <label for="title">Title</label>
            {{input value=model.title name="title"}}<br/>
            <label for="body__summary">Summary</label>
            {{textarea value=model.body.summary name="body__summary"}}<br/>
            <label for="body__value">Body</label>
            {{textarea value=model.body.value name="body__value"}}<br/>
            <label for="body__format">Text format</label>
            <select name="body__format" onchange={{action "updateFormat" value="target.value"}}>
                <option value="basic_html">Basic HTML</option>
                <option value="restricted_html">Restricted HTML</option>
                <option value="full_html">Full HTML</option>
                <option value="plain_text">Plain Text</option>
            </select>

            <button type="submit" class="button">Save</button>
            <button type="button" class="button hollow" {{action 'cancel'}}>Cancel</button>
            <button type="button" class="button alert float-right" {{action 'delete'}}>Delete</button>
        </form>
    </div>
    <div class="small-12 medium-4 columns">
        <ul>
            <li><i>Author:</i> {{model.uid.name}}</li>
            <li><i>Created</i>: {{model.createdDate}}</li>
            <li><i>NID</i>: {{model.nid}}</li>
            <li><i>UUID</i>: {{model.uuid}}</li>
        </ul>
    </div>
</div>

{{#each post.errors.title as |error|}}
    <div class="error">{{error.message}}</div>
{{/each}}
{{#each post.errors.body as |error|}}
    <div class="error">{{error.message}}</div>
{{/each}}

{{outlet}}
